{
  "name": "gheith3/filament-file-view-entry",
  "description": "A Filament plugin for displaying file attachments with type-specific icons and modal preview",
  "type": "library",
  "license": "MIT",
  "keywords": [
    "filament",
    "filament-plugin",
    "laravel",
    "file-view",
    "infolist"
  ],
  "authors": [
    {
      "name": "Gheith",
      "email": "alrawahi.gheith@gmail.com"
    }
  ],
  "homepage": "https://github.com/gheith3/FileViewEntryPlugin",
  "support": {
    "issues": "https://github.com/gheith3/FileViewEntryPlugin/issues",
    "source": "https://github.com/gheith3/FileViewEntryPlugin"
  },
  "require": {
    "php": "^8.1",
    "filament/filament": "^4.0",
    "illuminate/contracts": "^10.0|^11.0|^12.0",
    "illuminate/support": "^10.0|^11.0|^12.0"
  },
  "require-dev": {
    "pestphp/pest": "^3.0",
    "orchestra/testbench": "^8.0|^9.0|^10.0",
    "laravel/pint": "^1.0"
  },
  "autoload": {
    "psr-4": {
      "gheith3\\FileViewEntryPlugin\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "gheith3\\FileViewEntryPlugin\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "vendor/bin/pest",
    "test:filter": "vendor/bin/pest --filter",
    "test:coverage": "vendor/bin/pest --coverage",
    "format": "vendor/bin/pint",
    "format:check": "vendor/bin/pint --test"
  },
  "extra": {
    "laravel": {
      "providers": [
        "gheith3\\FileViewEntryPlugin\\FileViewEntryPluginServiceProvider"
      ]
    }
  },
  "config": {
    "sort-packages": true,
    "allow-plugins": {
      "pestphp/pest-plugin": true
    }
  },
  "minimum-stability": "dev",
  "prefer-stable": true
}
