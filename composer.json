{
  "name": "gheith3/filament-file-view-entry",
  "description": "A Filament plugin for displaying file attachments with type-specific icons and modal preview",
  "type": "library",
  "license": "MIT",
  "keywords": [
    "filament",
    "filament-plugin",
    "laravel",
    "file-view",
    "infolist"
  ],
  "authors": [
    {
      "name": "Gheith",
      "email": "alrawahi.gheith@gmail.com"
    }
  ],
  "require": {
    "php": "^8.1",
    "filament/filament": "^4.0",
    "illuminate/contracts": "^10.0|^11.0|^12.0",
    "illuminate/support": "^10.0|^11.0|^12.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^10.0|^11.0",
    "orchestra/testbench": "^8.0|^9.0|^10.0"
  },
  "autoload": {
    "psr-4": {
      "gheith3\\FileViewEntryPlugin\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "gheith3\\FileViewEntryPlugin\\Tests\\": "tests/"
    }
  },
  "extra": {
    "laravel": {
      "providers": [
        "gheith3\\FileViewEntryPlugin\\FileViewEntryPluginServiceProvider"
      ]
    }
  },
  "config": {
    "sort-packages": true
  },
  "minimum-stability": "dev",
  "prefer-stable": true
}
